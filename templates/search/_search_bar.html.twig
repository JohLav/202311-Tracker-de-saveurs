{# templates/search/index.html.twig #}

{{ form_start(form, {'attr': {'action': path('search_index')} }) }}
    <div class="row m-1 d-flex justify-content-center">
        <div class="col-3">
            {{ form_row(form.items) }}
            {{ form_row(form.city) }}
        </div>

        <div class="col-2">
            {{ form_row(form.timeSlot) }}
            {{ form_row(form.category) }}
        </div>

        <div class="col-2">
            {{ form_row(form.diets) }}
            {{ form_row(form.price) }}
        </div>

            <div class="col-2">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
    </div>
{{ form_end(form) }}
