{% extends 'admin/admin.base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block content %}
<div class="container d-sm-block justify-content-center">
    <div class="shadow-sm p-5 bg-body-tertiary rounded">
        <h1 class="text-center">Mes réservations</h1>
        <table class="table bg-transparent">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">Restaurant</th>
                <th scope="col">Nb personnes</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.datetime | date('d/m/Y') }}</td>
                    <td>{{ reservation.datetime | date('H:i') }}</td>
                    <td>{{ reservation.restaurant.name }}</td>
                    <td>{{ reservation.getAdultNb() }} adultes - {{ reservation.getKidNb() }} enfants</td>
                    <td>
                        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary"><i
                                class="bi bi-pencil-square"></i></a>
                        <a href="{{ path('reservation_delete', {'id': reservation.id}) }}" class="btn btn-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');"><i
                                class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="border-white" colspan="3">Aucun réservation trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
