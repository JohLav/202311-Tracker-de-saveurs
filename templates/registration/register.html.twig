{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}
{% block search %}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container d-sm-block justify-content-center" id="reg_form">
        <div class="shadow-lg p-5 m-5 bg-body-tertiary rounded">
            <div class="p-1">
                {{ form_start(registrationForm) }}
                <h2 class="text-center">Création de compte</h2>

                <div class="p-1">
                    {{ form_row(registrationForm.firstname, {
                        label: 'Prénom'
                    }) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.lastname, {
                        label: 'Nom'
                    }) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.phone, {
                        label: 'Téléphone'
                    }) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.email, {
                        label: 'Email'
                    }) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.agreeTerms, {label: "En cochant cette case, je déclare avoir pris connaissance des conditions générales d’utilisation du site internet et les accepter."}) }}
                </div>
                <div class="p-1">
                    {{ form_row(registrationForm.submit, {
                        label: 'Inscription'}) }}
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
