{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-end align-content-center">
            <div class="col-lg-4 col-sm-12">
                <h1 class="text-start pt-5 ps-5">
                    Bienvenue!
                </h1>
                <p class="py-3 ps-5 fs-5">
                    Trouvez le restaurant idéal en quelques clics sur notre site grâce à notre outil de filtrage
                    intuitif. Fini les recherches fastidieuses, bonjour à une expérience culinaire personnalisée !
                </p>
                {{ form_start(form, {'attr': {'action': path('home_index')} }) }}
                <div class="container-fluid d-block p-5 m-5 rounded" id="home_form">
                    {{ form_widget(form.items) }}
                    {{ form_widget(form.city) }}
                    <button class="btn btn-primary mt-4" type="submit">Rechercher</button>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-lg-8 col-sm-12 align-self-center">
                <img src="{{ asset('build/images/fruits.jpg') }}" class="img-fluid" alt="fruits">
            </div>
        </div>
    </div>
{% endblock %}
