{% extends 'admin/admin.base.html.twig' %}

{% block title %}Modification de Compte{% endblock %}

{% block content %}
    <div class="container d-sm-block justify-content-center">
        <div class="shadow-sm p-5 bg-body-tertiary rounded">
            <h2 class="mb-5">Modification du compte</h2>
            <div class="mb-3">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>
                {{ form_end(form) }}
            </div>
            <div class="mb-4">
                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce compte ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
