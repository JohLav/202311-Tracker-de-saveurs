{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block search %}{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="ms-5 mt-5">
       <h2>Connectez-vous</h2>
    </div>
    <div class="d-block">
            <form class="d-flex flex-column shadow-lg p-5 m-5 bg-body-tertiary rounded"
                  action="{{ path('app_login') }}"
                  method="post"
                  id="login_form">
                <div class="p-2">
                    <label for="username">Email :</label>
                    <input class="form-control"
                        type="text" id="username"
                        name="_username" value="{{ last_username }}">
                </div>
                <div class="p-2">
                    <label for="password">Mot de passe :</label>
                    <input class="form-control"
                        type="password" id="password" name="_password">
                </div>
                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"> #}
                <div class="p-2">
                    <button class="btn btn-primary" type="submit">Se Connecter</button>
                </div>
            </form>
    </div>
    <div class="d-flex ms-5 mb-5">
        <div>
            <p class="fs-6">
                Vous n'avez de compte ?
                <a href="/register" class="text-decoration-none">Cliquez ici</a>
            </p>
        </div>
        <div class="ps-5">
            <p class="fs-6">
                Vous Ãªtes un restaurateur ?
                <a href="/register" class="text-decoration-none">Cliquez ici</a>
            </p>
        </div>
    </div>

{% endblock %}
