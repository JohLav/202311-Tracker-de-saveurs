<div class="card m-3" style="width: 18rem;">
    {#                <img src="..." class="card-img-top" alt="...">  ajouter un carrousel Ã  la place image#}
    <div id="carouselExampleAutoplaying{{ loop.index }}" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://th.bing.com/th/id/OIP.6_UzrWzOBF_KDtJ6vwaV_wHaEw?pid=ImgDet&rs=1" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://www.restaurant-anglet.com/wp-content/uploads/2020/10/2-scaled.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://th.bing.com/th/id/R.efa8f447cba810a15ea303ae6767ff0c?rik=%2fgk%2fCOIEkQwYaw&pid=ImgRaw&r=0" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying{{ loop.index }}" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying{{ loop.index }}" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="card-body">
        {% if restaurant in app.user.favorites  %}
            <h5 class="card-title">{{ restaurant.name }} <a href="{{ path('app_favoris_remove', {'id': restaurant.id }) }}"><i class="bi bi-heart-fill"></i></a></h5>
        {% else %}
            <h5 class="card-title">{{ restaurant.name }} <a href="{{ path('app_favoris_new', {'id': restaurant.id }) }}"><i class="bi bi-heart"></i></a></h5>
        {% endif %}

        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>
